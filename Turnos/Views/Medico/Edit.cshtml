@model Turnos.Models.Medico

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Médico</h4>
<hr />
<div class="row">
    <div>
        <form class="col s12" asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="IdMedico" />
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate" />
                    <label asp-for="Nombre">Nombre(s)</label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <input asp-for="Apellido" type="text" class="validate"/>
                    <label asp-for="Apellido">Apellidos</label>
                    <span asp-validation-for="Apellido"></span>
                </div>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">home</i>
                <input asp-for="Direccion" type="text" class="validate" />
                <label asp-for="Direccion">Dirección</label>
                <span asp-validation-for="Direccion"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">phone</i>
                <input asp-for="Telefono" type="text" class="validate" />
                <label asp-for="Telefono">Teléfono</label>
                <span asp-validation-for="Telefono" ></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">local_post_office</i>
                <input asp-for="Email" type="text" class="validate" />
                <label asp-for="Email">Correo electrónico</label>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">event_available</i>
                <input asp-for="HorarioAtencionDesde" type="text" class="timepicker" />
                <label asp-for="HorarioAtencionDesde"></label>
                <span asp-validation-for="HorarioAtencionDesde"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">event_busy</i>
                <input asp-for="HorarioAtencionHasta" type="text" class="timepicker" />
                <label asp-for="HorarioAtencionHasta"></label>
                <span asp-validation-for="HorarioAtencionHasta"></span>
            </div>
            <div class="input-field col s12">
                <select name="IdEspecialidad" asp-items="ViewBag.ListaEspecialidades" class="browser-default"></select>
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">
                        Guardar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="col s6 m6">
                    <a class="waves-effect waves-light btn grey darken-4" asp-action="Index"><i class="material-icons left">undo</i>Regresar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
