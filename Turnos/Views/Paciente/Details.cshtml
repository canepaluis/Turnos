@model Turnos.Models.Paciente

<h1>Detalles</h1>
<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col s12 m6">
        <div class="card hoverable blue darken-1">
            <div class="card-content white-text">
                <span class="card-title"><h5><b>@Html.DisplayFor(modelo => modelo.Apellido), @Html.DisplayFor(modelo => modelo.Nombre)</b></h5></span>
                <dt>
                    <h6>@Html.DisplayNameFor(modelo => modelo.Direccion) : @Html.DisplayFor(modelo => modelo.Direccion)</h6>
                </dt>
                <hr />
                <dt>
                    <h6>@Html.DisplayNameFor(modelo => modelo.Telefono) : @Html.DisplayFor(modelo => modelo.Telefono)</h6>
                </dt>
                <hr />
                <dt>
                    <h6>@Html.DisplayNameFor(modelo => modelo.Email) : @Html.DisplayFor(modelo => modelo.Email)</h6>
                </dt>
            </div>
            <div class="card-action blue-grey darken-2">
                <input type="hidden" asp-for="IdPaciente" />
                <a asp-action="Edit" asp-route-id="@Model.IdPaciente" class="waves-effect waves-light btn-small orange lighten-2">Editar</a>
                <a asp-action="Index" class="right">Regresar</a>
            </div>
        </div>
    </div>
</div>