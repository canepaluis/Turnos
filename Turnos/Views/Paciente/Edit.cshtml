@model Turnos.Models.Paciente 

<h1>Editar</h1>
<h4>Paciente</h4>
<hr />
    <div class="row">
        <form class="col s12" asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="IdPaciente" />
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <label asp-for="Nombre">Nombre(s)</label>
                    <input asp-for="Nombre" />
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <label asp-for="Apellido">Apellido</label>
                    <input asp-for="Apellido" />
                    <span asp-validation-for="Apellido"></span>
                </div>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">home</i>
                <label asp-for="Direccion">Dirección</label>
                <input asp-for="Direccion" />
                <span asp-validation-for="Direccion"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">phone</i>
                <label asp-for="Telefono"></label>
                <input asp-for="Telefono" />
                <span asp-validation-for="Telefono"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">local_post_office</i>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">
                        Guardar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="col s6 m6">
                    <a class="waves-effect waves-light btn grey darken-4" asp-action="Index"><i class="material-icons left">undo</i>Regresar</a>
                </div>
            </div>
        </form>
    </div>